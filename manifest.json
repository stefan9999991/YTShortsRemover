{
    "manifest_version": 3,
    "name": "Shorts remover",
    "version": "1.0",
    "description": "removes shorts",
    "host_permissions": ["https://*.youtube.com/*"],
    "content_scripts": [
        {
            "matches": ["http://www.google.com/*",
                        "https://www.google.com/*",
                        "http://www.youtube.com/*",
                        "https://www.youtube.com/*"
                        ],
            "js": ["remover.js"]
        }
    ]
}
